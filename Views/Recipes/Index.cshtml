@model IEnumerable<RecipeSharingWebsiteAPI.Models.recipe>

<h2>Recipe Details</h2>
<table class="table">
    <thead>
        <tr>
            <th>Recipe ID</th>
            <th>Ingredients</th>
            <th>Instructions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>@recipe.recipe_id</td>
                <td>@recipe.recipe_ingredient</td>
                <td>@recipe.recipe_instruction</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@recipe.detail_id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@recipe.detail_id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Recipe</a>
