@model RecipeSharingWebsiteAPI.Models.recipe

<h2>Delete Recipe</h2>

<h3>Are you sure you want to delete this recipe?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Recipe Id
        </dt>
        <dd class="col-sm-10">
            @Model.recipe_id
        </dd>
        <dt class="col-sm-2">
            Ingredient
        </dt>
        <dd class="col-sm-10">
            @Model.recipe_ingredient
        </dd>
        <dt class="col-sm-2">
            Instruction
        </dt>
        <dd class="col-sm-10">
            @Model.recipe_instruction
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="detail_id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

