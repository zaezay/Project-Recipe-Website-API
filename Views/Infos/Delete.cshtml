@model RecipeSharingWebsiteAPI.Models.info

<h2>Delete Info Recipe</h2>

<h3>Are you sure you want to delete this info?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.recipe_title
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.recipe_image" alt="Recipe Image" class="img-fluid" />
        </dd>
        <dt class="col-sm-2">
            Create By
        </dt>
        <dd class="col-sm-10">
            @Model.create_by
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="recipe_id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

